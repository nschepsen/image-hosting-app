{% extends 'template.twig' %}

{% block main %}
<h2>WELCOME</h2>

<p>Click to choose, copy & paste or drag & drop files anywhere</p>

<ul>
  <li>Extensions: <strong>{{ app.file.extensions | join(', ') }}</strong></li>
  <li>Filesize: <strong>{{ app.file.size | number_format(1, ',', '.') }}</strong> MB</li>
  <li>Image Expires in: {{ app.file.lifetime }} Days (Unregistered User), or never (Otherwise)</li>
</ul>

<div class="file has-name is-fullwidth">
  <label class="file-label">
    <input class="file-input" type="file" name="resume">
    <span class="file-cta">
      <span class="file-icon">
        <i class="fas fa-upload"></i>
      </span>
      <span class="file-label">
        Choose a fileâ€¦
      </span>
    </span>
    <span class="file-name">
      Screen Shot 2017-07-29 at 15.54.25.png
    </span>
  </label>
</div>
{% endblock %}
